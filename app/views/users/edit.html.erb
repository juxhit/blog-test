<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1><%= @user.nickname %></h1>
    <%= form_tag(user_path(@user), method: :patch, multipart: true) do %>
      <div class="form-group">
        <%= label_tag "Никнейм:" %>
        <%= text_field_tag :nickname, @user.nickname, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Эл. почта:" %>
        <%= text_field_tag :email, @user.email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Аватар:" %>
        <%= file_field_tag :avatar %>
      </div>
      <div class="form-group">
        <%= label_tag "Пароль:" %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Подтвердить пароль:" %>
        <%= password_field_tag :password_confirmation, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "обновить", class: "btn btn-primary" %>
        <% if @current_user == @user %>
          <%= link_to "удалить", @user, method: :delete, data: { confirm: "Уверены?" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
