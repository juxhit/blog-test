<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1><%= @post.title %></h1>
    <%= form_tag(post_path(@post), method: :patch) do %>
      <%= hidden_field_tag :author_id, @post.author_id %>
      <%= hidden_field_tag :published_at, @post.published_at %>
      <div class="form-group">
        <%= label_tag "Название:" %>
        <%= text_field_tag :title, @post.title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Текст:" %>
        <%= text_area_tag :body, @post.body, class: "form-control", style: "resize:vertical" %>
      </div>
      <div class="form-group">
        <%= submit_tag "обновить", class: "btn btn-primary" %>
        <% if @current_user == @post.author %>
          <%= link_to "удалить", @post, method: :delete, data: { confirm: "Уверены?" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
