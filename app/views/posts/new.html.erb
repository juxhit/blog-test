<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>Создать блог:</h1>
    <%= form_tag(posts_path, :html => {:'data-type' => 'json', :multipart => true}) do |f| %>
      <div class="form-group">
        <%= label_tag "Название:" %>
        <%= text_field_tag :title, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Текст:" %>
        <%= text_area_tag :body, "", class: "form-control", style: "resize:vertical" %>
      </div>
      <div class="form-group">
        <%= submit_tag "добавить", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
